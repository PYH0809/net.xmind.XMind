{
  "id": "net.xmind.XMind",
  "command": "xmind",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "21.08",
  "separate-locales": false,
  "rename-icon":"xmind",
  "finish-args": [
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-desktop",
    "--filesystem=/tmp",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=/run/media",
    "--filesystem=/media",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "xmind",
      "buildsystem": "simple",
      "build_commands": [
        "ar x xmind.deb",
        "tar xf data.tar.xz",
        "cp -r usr/* /app",
        "mkdir /app/main",
        "cp -r opt/XMind/* /app/main",
        "ln -s /app/main/xmind /app/bin/xmind-0",
        "install -Dm644 net.xmind.XMind.metainfo.xml /app/share/metainfo/net.xmind.XMind.metainfo.xml",
        "install -Dm644 net.xmind.XMind.desktop -t /app/share/applications",
        "install -Dm755 xmind /app/bin/",
        "rm -rf /app/share/icons/hicolor/1024x1024"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://www.xmind.net/xmind/downloads/XMind-for-Linux-arm-64bit-12.0.0-202203100115.deb",
          "sha256": "0405cbda0458cea711d366157dadd9ce5834f9571efa48dbd6c21258ba97c102",
          "dest-filename": "xmind.deb",
          "only-arches": ["aarch64"]
        },
        {
          "type": "file",
          "url": "https://www.xmind.net/xmind/downloads/XMind-for-Linux-amd-64bit-12.0.0-202203092327.deb",
          "sha256": "b83576c5960d848a8e04ab5f1a35b02aadf99f29c3c62a7ec1a03c6b2920efde",
          "dest-filename": "xmind.deb",
          "only-arches": ["x86_64"]
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.metainfo.xml"
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.desktop"
        },
        {
          "type": "script",
          "dest-filename": "xmind",
          "commands": [
            "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
            "zypak-wrapper \"xmind-0\" \"$@\""
          ]
        }
      ]
    }
  ]
}
