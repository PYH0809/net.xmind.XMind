{
  "id": "net.xmind.XMind",
  "command": "xmind",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "21.08",
  "separate-locales": false,
  "rename-icon":"xmind",
  "finish-args": [
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-desktop",
    "--filesystem=/tmp",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=/run/media",
    "--filesystem=/media",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "xmind",
      "buildsystem": "simple",
      "build_commands": [
        "ar x xmind.deb",
        "tar xf data.tar.xz",
        "cp -r usr/* /app",
        "mkdir /app/main",
        "cp -r opt/Xmind/* /app/main",
        "ln -s /app/main/xmind /app/bin/xmind-0",
        "install -Dm644 net.xmind.XMind.metainfo.xml /app/share/metainfo/net.xmind.XMind.metainfo.xml",
        "install -Dm644 net.xmind.XMind.desktop -t /app/share/applications",
        "install -Dm755 xmind /app/bin/",
        "rm -rf /app/share/icons/hicolor/1024x1024"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-arm64bit-22.11.3771-202306050007.deb",
          "sha256": "afd67a8a10a9f97d585850fcf4a7c22583ddafac1abc3560c3f7ed21ff3ef3d6",
          "dest-filename": "xmind.deb",
          "only-arches": ["aarch64"]
        },
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-amd64bit-22.11.3771-202305311832.deb",
          "sha256": "c7909a2bc3c5665aba6f4cc00c61967514c2d0326757c43641e0e52d2f388d89",
          "dest-filename": "xmind.deb",
          "only-arches": ["x86_64"]
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.metainfo.xml"
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.desktop"
        },
        {
          "type": "script",
          "dest-filename": "xmind",
          "commands": [
            "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
            "zypak-wrapper \"xmind-0\" \"$@\""
          ]
        }
      ]
    }
  ]
}
