{
  "id": "net.xmind.XMind",
  "command": "xmind",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "base": "org.electronjs.Electron2.BaseApp",
  "base-version": "21.08",
  "separate-locales": false,
  "rename-icon":"xmind",
  "finish-args": [
    "--socket=x11",
    "--share=ipc",
    "--device=dri",
    "--socket=pulseaudio",
    "--share=network",
    "--filesystem=xdg-download",
    "--filesystem=xdg-documents",
    "--filesystem=xdg-pictures",
    "--filesystem=xdg-desktop",
    "--filesystem=/tmp",
    "--talk-name=org.freedesktop.Notifications",
    "--filesystem=/run/media",
    "--filesystem=/media",
    "--filesystem=home"
  ],
  "modules": [
    {
      "name": "xmind",
      "buildsystem": "simple",
      "build_commands": [
        "ar x xmind.deb",
        "tar xf data.tar.xz",
        "cp -r usr/* /app",
        "mkdir /app/main",
        "cp -r opt/Xmind/* /app/main",
        "ln -s /app/main/xmind /app/bin/xmind-0",
        "install -Dm644 net.xmind.XMind.metainfo.xml /app/share/metainfo/net.xmind.XMind.metainfo.xml",
        "install -Dm644 net.xmind.XMind.desktop -t /app/share/applications",
        "install -Dm755 xmind /app/bin/",
        "rm -rf /app/share/icons/hicolor/1024x1024"
      ],
      "sources": [
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-amd64bit-23.09.11172-202310122350.deb",
          "sha256": "b10898d06f0ee14c254fb2694deec904888f1af962b283aa45796d7cc4bdd820",
          "dest-filename": "xmind.deb",
          "only-arches": ["x86_64"]
        },
        {
          "type": "file",
          "url": "https://xmind.app/xmind/downloads/Xmind-for-Linux-arm64bit-23.09.11172-202310161754.deb",
          "sha256": "59bde95a01ec2418f0332a9a4d54ba3db62d00273810de6f0f2cc6c4f98e11f6",
          "dest-filename": "xmind.deb",
          "only-arches": ["aarch64"]
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.metainfo.xml"
        },
        {
          "type": "file",
          "path": "net.xmind.XMind.desktop"
        },
        {
          "type": "script",
          "dest-filename": "xmind",
          "commands": [
            "export TMPDIR=\"$XDG_RUNTIME_DIR/app/$FLATPAK_ID\"",
            "zypak-wrapper \"xmind-0\" \"$@\""
          ]
        }
      ]
    }
  ]
}
